{% macro field(imageName, patternName, patternLink, dateStarted, dateMade, difficulty, thought) %}
<div class="entry">
    <img src="/images/{{imageName}}" class="float-right">

    __<u>pattern:</u>__ [ {{patternName}} ]( {{patternLink}} )

    __<u>started:</u>__ {{dateStarted}}

    __<u>finished:</u>__ {{dateMade}}

    __<u>difficulty:</u>__  {{difficulty}}/5

    __<u>thoughts:</u>__ {{thought | safe}}   
</div>
{% endmacro %}
